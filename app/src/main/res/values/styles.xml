<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Done: Add necessary styles -->
    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Empty">
        <item name="android:layout_width">@dimen/empty</item>
        <item name="android:layout_height">@dimen/empty</item>
    </style>

    <style name="EmptyWrap" parent="Empty">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap" parent="Match">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchEmpty" parent="Match">
        <item name="android:layout_height">@dimen/empty</item>
    </style>

    <style name="Button" parent="EmptyWrap">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- RepresentativeFragment-->

    <style name="RepresentativeTitle" parent="Wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="RepresentativeAddress" parent="MatchWrap">
        <item name="android:inputType">textPostalAddress</item>
    </style>

    <style name="RepresentativeCity" parent="EmptyWrap">
        <item name="android:inputType">textPostalAddress</item>
    </style>

    <style name="RepresentativeState" parent="Empty">
        <item name="android:inputType">textPostalAddress</item>
        <item name="android:entries">@array/states</item>
    </style>

    <style name="RepresentativeZip" parent="EmptyWrap">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">5</item>
    </style>

    <style name="RepresentativePlaceholder">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- ElectionsFragment-->

    <style name="ElectionTitle" parent="MatchWrap">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

</resources>
